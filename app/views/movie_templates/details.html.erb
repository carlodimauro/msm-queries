
<h1> Movie #<%= @the_movie.id %> Details</h1>

<a href="/movies">Go Back</a>

<hr>

<dl>
<dt>Title</dt>
<dd><%= @the_movie.title %></dd>

<dt>Year</dt>
<dd><%= @the_movie.year %></dd>

<dt>Duration</dt>
<dd><%= @the_movie.duration %></dd>

<dt>Description</dt>
<dd><%= @the_movie.description %></dd>

<dt>Image</dt>
<dd><img src="<%= @the_movie.image %>" width ="200px"></dd>

<dt>Director</dt>
<dd><% lookup_director = Director.where({:id=> @the_movie.director_id }) %></dd>

<dd><%= lookup_director.first.name %></dd>

<dt>Created at</dt>
<dd><%= @the_movie.created_at %></dd>

<dt>Updated at</dt>
<dd><%= @the_movie.updated_at %></dd>

</dl>
